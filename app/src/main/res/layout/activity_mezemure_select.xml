<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Mezemure_select"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="መዝሙር ይምረጡ"
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="bold"
                app:fontFamily="@font/baloo" />


            <Button
                android:id="@+id/xeyake1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ተናገሩ" />



            <Button
                android:id="@+id/xeyake2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ልኡል እግዚአብሄር" />

            <Button
                android:id="@+id/xeyake3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="እስመ አልብነ ረዳኢ" />

            <Button
                android:id="@+id/xeyake4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ረድቶኛል እና እግዚአብሔር ይመስገን" />

            <Button
                android:id="@+id/xeyake5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ስብሐት ለአምላክነ" />

            <Button
                android:id="@+id/xeyake6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ኵሎ ዘፈቀደ" />

            <Button
                android:id="@+id/xeyake7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ኦ አባ ቅዱስ ዕቀቦሙ" />

            <Button
                android:id="@+id/xeyake8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" እግዚአብሔር ብርሃኔና መድኃኒቴ ነው" />

            <Button
                android:id="@+id/xeyake9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ለዚህ ቀን ላበቃው/ት/" />

            <Button
                android:id="@+id/xeyake10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="በሰላም ላመጣ" />

            <Button
                android:id="@+id/xeyake11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="አማን በአማን" />
            <Button
                android:id="@+id/xeyake12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ንሴብሖ" />
            <Button
                android:id="@+id/xeyake13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" ሰላም ለዝክረ ስምከ" />
            <Button
                android:id="@+id/xeyake14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="በክንፈ ረድኤትህ" />
            <Button
                android:id="@+id/xeyake15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ኃይል የእግዚአብሔር ነው" />
            <Button
                android:id="@+id/xeyake16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="እንዘይብሉ" />
            <Button
                android:id="@+id/xeyake17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ሰላምህን ስጣት" />
            <Button
                android:id="@+id/xeyake18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ለጌታዬ ለእግዚአብሔር" />
            <Button
                android:id="@+id/xeyake19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="እናመስግን አማኑኤልን" />
            <Button
                android:id="@+id/xeyake20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="እግዚአብሔር ሆይ እርዳኝ" />
            <Button
                android:id="@+id/xeyake21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="በኮከብ መፅኡ" />
            <Button
                android:id="@+id/xeyake22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" ስብሐት ለእግዚአብሔር" />
            <Button
                android:id="@+id/xeyake23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ለዘተወልደ እምቅድስት" />
            <Button
                android:id="@+id/xeyake24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ወረደ ወልድ" />
            <Button
                android:id="@+id/xeyake25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ውስተ ማኅጸነ ድንግል" />
            <Button
                android:id="@+id/xeyake26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="የዓለምን በደል" />

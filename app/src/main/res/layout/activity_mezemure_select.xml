                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="እንዘ ሕፃን" />
            <Button
                android:id="@+id/xeyake28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ሆሣዕና እምርት" />
            <Button
                android:id="@+id/xeyake29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ሆሣዕና በአርያም" />
            <Button
                android:id="@+id/xeyake30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ሞተሃልና ስለእኔ" />
            <Button
                android:id="@+id/xeyake31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="አንድ ቀን አለ" />
            <Button
                android:id="@+id/xeyake32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="እንበለ ምግባር" />
            <Button
                android:id="@+id/xeyake33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ለምኝልን ማርያም" />
            <Button
                android:id="@+id/xeyake34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="እንተ በምድር" />
            <Button
                android:id="@+id/xeyake35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ማርያም ድንግል" />
            <Button
                android:id="@+id/xeyake36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ማርያም ፊደል ናት" />
            <Button
                android:id="@+id/xeyake37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" ሶበሰ ኪዳንኪ" />
            <Button
            android:id="@+id/xeyake38"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="አትለይን" />
            <Button
                android:id="@+id/xeyake39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ንጽሕተ ንጹሐን" />
            <Button
                android:id="@+id/xeyake40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ኢያቄም ወለዳ" />
            <Button
                android:id="@+id/xeyake41"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="እመቤታችን ማርያም" />
            <Button
                android:id="@+id/xeyake42"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ለእናታችን ቅድስት" />
            <Button
                android:id="@+id/xeyake43"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="እመቤታችን" />



        </LinearLayout>


    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>